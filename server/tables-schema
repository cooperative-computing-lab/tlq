CREATE TABLE IF NOT EXISTS component (ID INTEGER PRIMARY KEY AUTOINCREMENT, hash TEXT UNIQUE, command TEXT, exitStatus TEXT, host TEXT, log TEXT, system TEXT);
CREATE TABLE IF NOT EXISTS envVar (ID INTEGER PRIMARY KEY AUTOINCREMENT, hash TEXT UNIQUE, name TEXT, results TEXT, host TEXT, log TEXT, system TEXT);
CREATE TABLE IF NOT EXISTS file (ID INTEGER PRIMARY KEY AUTOINCREMENT, hash TEXT UNIQUE, path TEXT, failures INTEGER, host TEXT, log TEXT, system TEXT);
CREATE TABLE IF NOT EXISTS process (ID INTEGER PRIMARY KEY AUTOINCREMENT, hash TEXT UNIQUE, pid INTEGER, ppid INTEGER, host TEXT, log TEXT, system TEXT);
CREATE TABLE IF NOT EXISTS component_process (ID INTEGER PRIMARY KEY AUTOINCREMENT, component_hash TEXT UNIQUE, process_hash TEXT UNIQUE, host TEXT);
CREATE TABLE IF NOT EXISTS envVar_process (ID INTEGER PRIMARY KEY AUTOINCREMENT, envVar_hash TEXT UNIQUE, process_hash TEXT UNIQUE, host TEXT);
CREATE TABLE IF NOT EXISTS file_process (ID INTEGER PRIMARY KEY AUTOINCREMENT, file_hash TEXT UNIQUE, process_hash TEXT UNIQUE, host TEXT);
